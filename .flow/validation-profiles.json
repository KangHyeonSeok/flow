{
  "nextjs": {
    "description": "Next.js 프로젝트 빌드 및 린트",
    "commands": [
      "npm run build",
      "npm run lint"
    ]
  },
  "typescript": {
    "description": "TypeScript 타입 체크",
    "commands": [
      "npx tsc --noEmit"
    ]
  },
  "powershell": {
    "description": "PowerShell 스크립트 문법 검사",
    "commands": [
      "Get-ChildItem .flow/scripts/*.ps1 | ForEach-Object { $null = [System.Management.Automation.Language.Parser]::ParseFile($_.FullName, [ref]$null, [ref]$errors); if ($errors) { throw \"$($_.Name): $errors\" } }"
    ]
  },
  "markdown": {
    "description": "Markdown 파일 존재 확인",
    "commands": [
      "Test-Path docs/flow/implements/*/plan.md"
    ]
  }
}
